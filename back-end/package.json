{
  "name": "back-end",
  "version": "0.1.0",
  "main": "server.py",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "run-script-os",
    "dev:macos": "source ../virtual/bin/activate && nodemon --exec python3 server.py",
    "dev:windows": "../virtual/Scripts/activate && nodemon --exec python server.py",
    "setup": "run-script-os",
    "setup:macos": "python3 -m venv ../virtual && source ../virtual/bin/activate && pip install -r requirements.txt",
    "setup:windows": "python -m venv ../virtual && ../virtual/Scripts/activate && pip install -r requirements.txt",
    "update": "run-script-os",
    "update:macos": "source ../virtual/bin/activate && pip install -r requirements.txt",
    "update:windows": "../virtual/Scripts/activate && pip install -r requirements.txt",
    "pi": "run-script-os",
    "pi:macos": "source scripts/pi.sh",
    "pi:windows": "bash scripts/pi.sh",
    "pui": "run-script-os",
    "pui:macos": "source scripts/pui.sh",
    "pui:windows": "bash scripts/pui.sh",
    "pl": "run-script-os",
    "pl:macos": "source scripts/pl.sh",
    "pl:windows": "bash scripts/pl.sh",
    "export": "rm requirements.txt && pip freeze >> requirements.txt"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "run-script-os": "^1.1.6"
  }
}
